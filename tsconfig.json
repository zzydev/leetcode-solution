{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./src",
    "rootDir": "./",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "./*.ts"],
  "exclude": ["node_modules"]
}
